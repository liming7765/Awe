{
    "version": "17.0.0",
    "description": "IDE for development with the Qt framework",
    "homepage": "https://doc.qt.io/qtcreator/index.html",
    "license": "GPL-3.0-only",
    "suggest": {
        "vcredist": "extras/vcredist2022"
    },
    "architecture": {
        "64bit": {
            "url": "https://download.qt.io/official_releases/qtcreator/17.0/17.0.0/installer_source/windows_x64/qtcreator.7z",
            "hash": "md5:96c9586668e609c1f56c315103097dec"
        }
    },
    "installer": {
        "script": [
            "ensure \"$persist_dir\" | Out-Null",
            "$targetPath = \"$env:APPDATA\\QtProject\"",
            "$linkType = (Get-Item -Path $targetPath -ErrorAction SilentlyContinue).LinkType",
            "if (Test-Path $targetPath) {",
            "    if ($linkType -eq 'Junction') {",
            "        Remove-Item -Path $targetPath -Force",
            "    } else {",
            "        Get-ChildItem -Path $targetPath -Force | Move-Item -Destination $persist_dir -Force",
            "        Remove-Item -Path $targetPath -Force -Recurse",
            "    }",
            "}",
            "New-Item \"$env:APPDATA\\QtProject\" -ItemType Junction -Target \"$persist_dir\" | Out-Null"
        ]
    },
    "uninstaller": {
        "script": "Remove-Item \"$env:APPDATA\\QtProject\" -Recurse -Force -ErrorAction 'SilentlyContinue'"
    },
    "bin": "bin\\qtcreator.exe",
    "shortcuts": [
        [
            "bin\\qtcreator.exe",
            "Qt Creator"
        ]
    ],
    "checkver": {
        "url": "https://www.qt.io/offline-installers",
        "regex": "Qt Creator\\s+([\\d.]+)\\s+for Windows"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://download.qt.io/official_releases/qtcreator/$majorVersion.$minorVersion/$version/installer_source/windows_x64/qtcreator.7z"
            }
        },
        "hash": {
            "url": "$baseurl/md5sums.txt"
        }
    }
}
