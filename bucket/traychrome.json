{
    "version": "1.5",
    "description": "Minimize Chrome (and other windows) to the system tray using a hotkey (Boss Key).",
    "homepage": "https://github.com/cornradio/tray-chrome",
    "license": "Unknown",
    "url": "https://github.com/cornradio/tray-chrome/releases/download/v1.5/TrayChrome.exe",
    "hash": "c799f424da642f61e5e14e9036440cca9340673205c603e1e4220bc180197c92",
    "bin": "TrayChrome.exe",
    "shortcuts": [
        [
            "TrayChrome.exe",
            "TrayChrome"
        ]
    ],
    "persist": [
        "TrayChrome.exe.WebView2"
    ],
    "post_install": [
        "$files = @('settings.json', 'bookmarks.json')",
        "foreach ($file in $files) {",
        "    if (Test-Path \"$persist_dir\\$file\") {",
        "        if (Test-Path \"$dir\\$file\") { Remove-Item \"$dir\\$file\" -Force }",
        "        New-Item -Path \"$dir\\$file\" -ItemType HardLink -Value \"$persist_dir\\$file\" | Out-Null",
        "    }",
        "}"
    ],
    "pre_uninstall": [
        "$files = @('settings.json', 'bookmarks.json')",
        "Ensure-Dir \"$persist_dir\"",
        "foreach ($file in $files) {",
        "    if ((Test-Path \"$dir\\$file\") -and !(Test-Path \"$persist_dir\\$file\")) {",
        "        Copy-Item \"$dir\\$file\" \"$persist_dir\\$file\"",
        "    }",
        "}"
    ],
    "checkver": {
        "github": "cornradio/tray-chrome"
    },
    "autoupdate": {
        "url": "https://github.com/cornradio/tray-chrome/releases/download/v$version/TrayChrome.exe"
    }
}
