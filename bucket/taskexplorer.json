{
    "##": [
        "Scoop manifest for TaskExplorer, an advanced task manager with detailed process monitoring",
        "Persists TaskExplorer.ini in config directory for portable mode",
        "autoupdate.hash configured for GitHub auto-generated SHA256 checksums from the 'digest' field"
    ],
    "version": "1.6.6",
    "description": "Advanced task manager tool focused on detailed application monitoring",
    "homepage": "https://github.com/DavidXanatos/TaskExplorer",
    "license": "GPL-3.0-only",
    "url": "https://github.com/DavidXanatos/TaskExplorer/releases/download/v1.6.6/TaskExplorer-v1.6.6.exe",
    "hash": "9cfe410d127f9b428834d002445145d4c443304e5e9d4786d7d383a4ffe142ac",
    "innosetup": true,
    "architecture": {
        "64bit": {
            "extract_dir": "x64"
        },
        "32bit": {
            "extract_dir": "x86"
        },
        "arm64": {
            "extract_dir": "ARM64"
        }
    },
    "bin": "TaskExplorer.exe",
    "shortcuts": [
        [
            "TaskExplorer.exe",
            "Task Explorer"
        ]
    ],
    "pre_install": [
        "$configPath = Join-Path $persist_dir 'TaskExplorer.ini'",
        "$destPath = Join-Path $dir 'TaskExplorer.ini'",
        "if (Test-Path $configPath) {",
        "    if (Test-Path $destPath) { Remove-Item $destPath -Force -ErrorAction SilentlyContinue }",
        "    Copy-Item $configPath $destPath -Force -ErrorAction SilentlyContinue",
        "}"
    ],
    "post_install": "if (Test-Path \"$dir\\TaskExplorer.ini.original\") { Remove-Item \"$dir\\TaskExplorer.ini.original\" -Force -ErrorAction SilentlyContinue }",
    "persist": "TaskExplorer.ini",
    "checkver": {
        "url": "https://api.github.com/repos/DavidXanatos/TaskExplorer/releases/latest",
        "jsonpath": "$.tag_name",
        "regex": "v?([\\d.]+)"
    },
    "autoupdate": {
        "url": "https://github.com/DavidXanatos/TaskExplorer/releases/download/v$version/TaskExplorer-v$version.exe",
        "architecture": {
            "64bit": {
                "extract_dir": "x64"
            },
            "32bit": {
                "extract_dir": "x86"
            },
            "arm64": {
                "extract_dir": "ARM64"
            }
        },
        "hash": {
            "url": "https://api.github.com/repos/DavidXanatos/TaskExplorer/releases/tags/v$version",
            "jsonpath": "$.assets[?(@.name == 'TaskExplorer-v$version.exe')].digest",
            "regex": "^sha256:([a-fA-F0-9]{64})$"
        }
    }
}
