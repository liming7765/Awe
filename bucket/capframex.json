{
    "version": "1.8.4",
    "description": "Frametimes analysis tool compatible with OCAT (Portable Mode enabled)",
    "homepage": "https://github.com/CXWorld/CapFrameX",
    "license": "MIT",
    "notes": "CapFrameX requires .NET 9.0 Desktop Runtime and Visual C++ 2015-2022 Redistributable.",
    "suggest": {
        "dotnet-desktop-runtime": "dotnet-desktop-runtime",
        "vcredist": "extras/vcredist2022"
    },
    "architecture": {
        "64bit": {
            "url": "https://github.com/CXWorld/CapFrameX/releases/download/v1.8.4/release_1.8.4_portable.zip",
            "hash": "b161727a9a1642af46df55294e5beb3089a85543c5db2fc2aa2a6015eb755102"
        }
    },
    "pre_install": [
        "$topLevelItems = Get-ChildItem -Path $dir",
        "if (($topLevelItems.Count -eq 1) -and ($topLevelItems[0].PSIsContainer)) {",
        "    $subfolder = $topLevelItems[0].FullName",
        "    Copy-Item -Path \"$subfolder\\*\" -Destination $dir -Recurse",
        "    Remove-Item -Path $subfolder -Recurse -Force",
        "}"
    ],
    "post_install": [
        "if (!(Test-Path \"$dir\\portable.json\")) {",
        "    Write-Host 'Creating default portable.json...' -ForegroundColor DarkCyan",
        "    $portableConfig = @{",
        "        portable = $true",
        "        paths = @{",
        "            config = './Portable/Config'",
        "            captures = './Portable/Captures'",
        "            screenshots = './Portable/Screenshots'",
        "            logs = './Portable/Logs'",
        "            cloud = './Portable/Captures/Cloud'",
        "        }",
        "    }",
        "    $portableConfig | ConvertTo-Json | Set-Content -Path \"$dir\\portable.json\" -Encoding UTF8",
        "}",
        "",
        "@('Config', 'Captures', 'Screenshots', 'Logs') | ForEach-Object {",
        "    $targetPath = \"$dir\\Portable\\$_\"",
        "    if (!(Test-Path $targetPath)) {",
        "        New-Item -ItemType Directory -Path $targetPath | Out-Null",
        "    }",
        "}"
    ],
    "bin": "CapFrameX.exe",
    "shortcuts": [
        [
            "CapFrameX.exe",
            "CapFrameX (Portable)"
        ]
    ],
    "persist": [
        "Portable",
        "portable.json"
    ],
    "checkver": {
        "url": "https://api.github.com/repositories/142042657/releases",
        "jsonpath": "$[?(@.tag_name =~ /^(?!.*beta).+$/)].tag_name",
        "regex": "(?<tag>v(?<version>[\\d.]+)[^\"]*)"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/CXWorld/CapFrameX/releases/download/$matchTag/release_$version_portable.zip"
            }
        }
    }
}
